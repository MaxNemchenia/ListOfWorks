<Window x:Class="QulixTestWork.ImplementerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QulixTestWork"
        mc:Ignorable="d"
        Title="ImplementerForm" Height="450" Width="800">
    <Grid x:Name="GridForData" Margin="0,0,-0.4,3">
        <DataGrid x:Name="workDataGrid"  Margin="40,20,40,200" MouseLeftButtonUp="workDataGrid_MouseLeftButtonUp" CanUserReorderColumns="False" CanUserSortColumns="False"/>
        <Grid Margin="0,0,40,50">
            <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="40,0,0,70" VerticalAlignment="Bottom" Width="75" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="Edit" HorizontalAlignment="Left" Margin="140,0,0,70" VerticalAlignment="Bottom" Width="75" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="240,0,0,70" VerticalAlignment="Bottom" Width="75" Click="DeleteButton_Click"/>

        </Grid>
    </Grid>
</Window>
